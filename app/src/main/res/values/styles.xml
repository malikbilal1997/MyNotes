<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Application Theme Colors -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- Application Status Styles -->
        <item name="android:statusBarColor">@color/colorGrayDark</item>

        <!-- Application Font Styles -->
        <item name="android:textColor">@color/colorBlack</item>
        <item name="fontFamily">@font/product_sans_regular</item>

        <!-- Application Menu Styles -->
        <item name="android:textAppearanceLargePopupMenu">@style/LargePopupMenu</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/SmallPopupMenu</item>

    </style>

    <style name="HintText">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="LargePopupMenu">
        <item name="android:textSize">@dimen/text_default</item>
    </style>

    <style name="SmallPopupMenu">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

</resources>